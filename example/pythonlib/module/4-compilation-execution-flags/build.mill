package build
import mill._, pythonlib._

object `package` extends RootModule with PythonModule {
  def mainScript = Task.Source { millSourcePath / "src" / "foo.py" }
  def pythonOptions = Seq("-Wall", "-Xdev")
  def forkEnv = Map("MY_ENV_VAR" -> "HELLO MILL!")
}

