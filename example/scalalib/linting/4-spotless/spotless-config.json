{
  "formatters": [
    {
      "includes": [
        "glob:**/*.scala"
      ],
      "steps": [
        {
          "$type": "ScalaFmt"
        }
      ]
    },
    {
      "includes": [
        "glob:**/*.java"
      ],
      "steps": [
        {
          "$type": "PalantirJavaFormat"
        }
      ]
    }
  ]
}