package build

import mill._
import mill.javascriptlib._

object foo extends TypeScriptModule {
  def compilerOptions =
    Task {
      super.compilerOptions() +
        (
          "skipLibCheck" -> ujson.True,
          "module" -> ujson.Str("commonjs"),
          "target" -> ujson.Str("es6")
        )
    }
}

