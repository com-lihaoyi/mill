{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "declaration": false,
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types"], // Explicitly include type roots
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "paths": {
      "app/*": ["src/app/*"]
    },
    "baseUrl": ".",
    "types": ["jest", "@testing-library/jest-dom", "cypress"] // Ensure Jest types are included
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public"]
}