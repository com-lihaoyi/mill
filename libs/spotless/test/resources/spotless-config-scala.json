{
  "extensions": ["scala"],
  "steps": [
    {
      "$type": "LicenseHeader",
      "headerFile": "license-header.txt",
      "delimiter": "(package|import|public|class|module) ",
      "name": "ACME",
      "yearSeparator": "-",
      "yearMode": "PRESERVE"
    },
    {
      "$type": "ScalaFmt",
      "version": "3.8.1",
      "scalaMajorVersion": "2.13",
      "configFile": ".scalafmt.conf"
    }
  ]
}
