{
  "formatters": [
    {
      "includes": [
        "glob:**/*.java"
      ],
      "steps": [
        {
          "$type": "Fence",
          "name": "toggle",
          "regex": [
            "spotless:off",
            "spotless:on"
          ],
          "preserve": true,
          "steps": [
            {
              "$type": "PalantirJavaFormat"
            }
          ]
        }
      ]
    }
  ]
}