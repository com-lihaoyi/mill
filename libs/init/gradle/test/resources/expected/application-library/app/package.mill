package build.app

import mill.javalib._
import millbuild._

object `package` extends ApplicationLibraryBaseModule {

  def mvnDeps = super.mvnDeps() ++ Seq(Deps.commonsText)

  def moduleDeps = super.moduleDeps ++ Seq(build.utilities)

  object test extends MavenTests with TestModule.Junit5 {

    def mandatoryMvnDeps = super.mandatoryMvnDeps() ++
      Seq(Deps.junitJupiter, Deps.junitPlatformLauncher)

    def testParallelism = false

    def testSandboxWorkingDir = false
  }

}
