package build.testrunner
// imports
import mill._
import millbuild._

/**
 * The JVM testrunner used for discovering and running Junit/Scalatest/Kotest/etc.
 * test suites, both in-process and in a sub-process
 */
object `package` extends RootModule with MillPublishScalaModule {
  def moduleDeps = Seq(build.scalalib.api, build.core.internal, entrypoint, build.main.util)

  object entrypoint extends MillPublishJavaModule {
    override def ivyDeps = Agg(Deps.sbtTestInterface)
  }
}
