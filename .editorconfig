root = true

[*.java]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[*.scala]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.{kt,kts}]
ktlint_code_style = intellij_idea

[kotlinlib/test/resources/contrib/ktfmt/**/*]
ktlint = disabled

[out/**/*]
ktlint = disabled
