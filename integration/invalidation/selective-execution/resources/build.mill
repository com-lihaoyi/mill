import mill._

def foo = Task.Source(millSourcePath / "foo.txt")
def fooHelper(p: os.Path) = {
  "fooHelper " + os.read(p)
}
def fooCommand() = Task.Command {
  System.out.println("Computing fooCommand")
  fooHelper(foo().path)
}

